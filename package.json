{
  "name": "reka",
  "version": "0.1.0",
  "description": "An app to help host a tasting event",
  "main": "server",
  "author": "Don Smith",
  "license": "GPL-3.0",
  "scripts": {
    "build": "webpack --config ./client/webpack.config.js",
    "dev": "run-p dev:*",
    "dev:server": "nodemon --watch server",
    "dev:client": "webpack --config ./client/webpack.config.js --watch",
    "e2e": "cypress run",
    "e2e:record": "cypress run --record --key 4ef2fd8e-9808-4b9f-9794-918474434085",
    "knex": "knex --knexfile ./server/db/knexfile.js",
    "db:migrate": "npm run knex migrate:latest",
    "db:seed": "npm run knex seed:run",
    "db:delete": "rm server/db/dev.sqlite",
    "db:reset": "run-s db:delete db:migrate db:seed",
    "lint": "eslint client server tests --ignore-pattern 'bundle.js' && exit 0",
    "postinstall": "run-s build db:migrate",
    "test": "jest tests/client tests/server && exit 0",
    "test:api": "run-s db:reset postman:run db:reset",
    "postman:run": "newman run tests/server/Reka.postman_collection.json --environment tests/server/Reka-Dev.postman_environment.json",
    "test:watch": "jest tests/client tests/server --watch",
    "start": "node server"
  },
  "precommit": "lint, test, test:api, e2e",
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less)$": "identity-obj-proxy"
    },
    "setupFiles": [
      "./tests/client/setup.js"
    ]
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.15.3",
    "express-jwt": "^5.3.0",
    "jsonwebtoken": "^8.4.0",
    "jwt-decode": "^2.2.0",
    "knex": "^0.19.5",
    "libsodium-wrappers-sumo": "^0.7.4",
    "moment": "^2.18.1",
    "pg": "^7.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.6",
    "babel-register": "^6.26.0",
    "cypress": "^3.1.5",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^5.13.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-chai-friendly": "^0.4.1",
    "eslint-plugin-cypress": "^2.2.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-standard": "^4.0.0",
    "file-loader": "^3.0.1",
    "identity-obj-proxy": "^3.0.0",
    "input-moment": "^0.4.0",
    "jest": "^24.1.0",
    "jsdom": "^15.2.1",
    "newman": "^4.4.1",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.1.5",
    "pre-commit": "^1.2.2",
    "prop-types": "^15.5.10",
    "raw-loader": "^1.0.0",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "react-modal": "^3.8.1",
    "react-redux": "^6.0.0",
    "react-router-dom": "^4.1.2",
    "react-test-renderer": "^16.8.1",
    "redux": "^4.0.5",
    "redux-mock-store": "^1.3.0",
    "redux-thunk": "^2.1.0",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.85.0",
    "sqlite3": "^4.0.6",
    "style-loader": "^0.23.1",
    "superagent": "^4.1.0",
    "supertest": "^4.0.2",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.1.14"
  }
}
